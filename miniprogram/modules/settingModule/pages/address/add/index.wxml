<view class="container address">
    <form>
        <!-- 地址信息 -->
        <view class="address-info">
            <!-- 收货人 -->
            <view class="row">
                <text class="title">收货人</text>
                <input
                    placeholder-style="color: #969799"
                    placeholder="请输入收货人姓名"
                    model:value="{{ name }}"
                />
            </view>

            <!-- 手机号码 -->
            <view class="row">
                <text class="title">手机号码</text>
                <input
                    placeholder-style="color: #969799"
                    placeholder="请输入收货人手机号"
                    model:value="{{ phone }}"
                />
            </view>

            <!-- 省市区 -->
            <view class="row">
                <text class="title">所在地区</text>

                <picker
                    mode="region"
                    value="{{ [provinceName, cityName, districtName] }}"
                    bindchange="onAddressChange"
                >
                    <view class="region" wx:if="{{ provinceName }}">
                        {{ provinceName + ' ' + cityName + ' ' + districtName }}
                    </view>
                    <view class="placeholder" wx:else>
                        请选择收货人所在地区</view
                    >
                </picker>

                <view class="location" bind:tap="onLocation">
                    <van-icon name="location-o" color="#777" />
                    <text>定位</text>
                </view>
            </view>

            <!-- 详细地址 -->
            <view class="row">
                <text class="title">详细地址</text>
                <textarea
                    auto-height
                    placeholder-style="color: #969799"
                    placeholder="门牌号(例：5号楼1单元203室)"
                    model:value="{{ address }}"
                />
            </view>

            <!-- 设置默认地址 -->
            <view class="row">
                <text class="title">设置默认地址</text>
                <switch color="#f3514f" class="checkbox" model:checked="{{ isDefault }}"/>
            </view>
        </view>

        <!-- 提交按钮 -->
        <button class="button" bindtap="saveAddrssForm">保存</button>
    </form>
</view>
